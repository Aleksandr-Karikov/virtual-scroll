{
    "compilerOptions": {
      "jsx": "react",
      "allowJs": true,
      "target": "ES6",
      "module": "ESNext",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"],
        "@src/*": ["./src/*"]
      }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
    "include": ["src/**/*"]
  }